{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "PostgreSql": {
    "Host": "relay_persistence_postgresql",
    "Database": "relayserver",
    "Username": "relayserver",
    "Password": "<Strong!Passw0rd>"
  },
  "Authentication": {
    "Authority": "http://relay_identityserver"
  },
  "RabbitMq": {
    "Host": "relay_transport_rabbitmq1",
    "Username": "relayserver",
    "Password": "<Strong!Passw0rd>",
    "Port": 5672,
    "VirtualHost": "/"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 115343360
    }
  },
  "Maintenance": {
    "RunInterval": "00:10:00" // run ever 10 minutes, default: 15 Minutes
  },
  "Statistics": {
    "EntryMaxAge": "01:00:00", // one hour, default: 15 Minutes
    "LastActivityUpdateInterval": "00:01:00" // one minute, default: 5 minutes
  }
}
